msgctxt "Addons::name::best2pay"
msgid "Best2Pay"
msgstr "Best2Pay"

msgctxt "Addons::description::best2pay"
msgid "Accept payments for your products via credit and debit cards."
msgstr "Принимайте платежи с помощью кредитных и дебетовых карт."

# Settings
msgctxt "Languages::best2pay.sector_description"
msgid "Your individual customer number"
msgstr "Ваш индивидуальный номер клиента"

msgctxt "Languages::best2pay.password_description"
msgid "Password used to generate a digital signature"
msgstr "Пароль, используемый для формирования цифровой подписи"

msgctxt "Languages::best2pay.payment_method"
msgid "Payment method"
msgstr "Способ оплаты"

msgctxt "Languages::best2pay.one_stage"
msgid "Standard acquiring (one-stage payment)"
msgstr "Стандартный эквайринг (одностадийная оплата)"

msgctxt "Languages::best2pay.two_steps"
msgid "Standard acquiring (two-stage payment)"
msgstr "Стандартный эквайринг (двухстадийная оплата)"

msgctxt "Languages::best2pay.halva"
msgid "Halva Chastyami (one-stage payment)"
msgstr "Только Халва Частями (одностадийная оплата)"

msgctxt "Languages::best2pay.halva_two_steps"
msgid "Halva Chastyami (two-stage payment)"
msgstr "Только Халва Частями (двухстадийная оплата)"

msgctxt "Languages::best2pay.sbp"
msgid "Fast Payment System"
msgstr "Система Быстрых Платежей (СБП)"

msgctxt "Languages::best2pay.two_steps_description"
msgid "Payment occurs after confirmation by the manager in the personal account"
msgstr "Оплата происходит после подтверждения менеджером в ЛК"

msgctxt "Languages::best2pay.modal_payform"
msgid "Open the payment form in modal window"
msgstr "Открывать пейформу в модальном окне"

msgctxt "Languages::best2pay.modal_payform_description"
msgid "When this option is enabled, the payment form opens in a modal window"
msgstr "При включенной опции форма оплаты открывается в модальном окне"

msgctxt "Languages::best2pay.test_mode"
msgid "Test Mode"
msgstr "Тестовый режим"

msgctxt "Languages::best2pay.test_mode_description"
msgid "Use emulation of real work. Buyer will not be charged"
msgstr "Использовать эмуляцию реальной работы. Средства с покупателя списаны не будут"

msgctxt "Languages::best2pay.tax"
msgid "Tax"
msgstr "Налог"

